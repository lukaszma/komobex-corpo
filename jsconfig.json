{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "checkJs": true,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./**/*.js"]
}
